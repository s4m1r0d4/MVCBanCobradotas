@model HistorialPrestamosModel
<div>
    <p>Todas las solicitudes de los prestamos no aprobados</p>
</div>

<div>
    <table style="text-align: left; width: 100%;" border="1" cellpadding="2" cellspacing="2">
        <thead>
            <th>Cantidad</th>
            <th>Meses</th>
        </thead>
        <tbody>
            @foreach (Prestamo data in Model.Prestamos)
            {
                <tr>
                    <td>@data.IDPrestamo</td>
                    <td>@data.Cantidad</td>
                    <td>@data.NumMeses</td>
                </tr>
                <div class="row">
                    <div class="col">
                        <a href="@Url.Action("CalcularPrestamo", "AdministrarPrestamos", @data.IDPrestamo)">
                            <button class="ingreso">Calcular</button>
                        </a>
                    </div>
                </div>
            }
        </tbody>
    </table>
</div>