@{
    ViewData["Title"] = "IniciarSesion";
}

<div class="header">

    <h1>Welcome Again to BanCobradotas! </h1>

</div>

<div class="jumbotron">

    <form asp-controller="LogIn" asp-action="IniciarSesion" method="post" class="pure-form">

        <div class="container">
            Ingresa tu usuario
            <br><br/>
            <input type="text" class="pure-input-rounded" style="background: #D3CEFA; border: 4px solid #363469; color: #363469;"
               placeholder="Usuario" required name="usuario" />
        </div>
        <br /><br />
        <div class="container">
            Ingresa tu contraseña
            <br><br/>
            <input type="password" class="pure-input-rounded" style="background: #D3CEFA; border: 4px solid #363469;"
               placeholder="contraseña" required name="contrasena" />
        </div>

        <br /><br />
        <div class="aceptar">
            <input type="submit" value="aceptar" class="pure-input-rounded"
                style="background: #363469; border-color: #363469; font-family: 'Baloo Tamma 2', cursive; color: #FFFF" />
        </div>
    </form>

    @if (ViewData.ContainsKey("Mensaje"))
    {
        <div class="row">
            @ViewData["Mensaje"]
        </div>
    }

</div>