@model HistorialPrestamosModel
<div>
    <p>Historial de prestamos</p>
</div>

<div class="Prestamos">
    <table style="text-align: left; width: 100%;" border="1" cellpadding="2" cellspacing="2">
        <thead>
            <th>Folio del prestamo</th>
            <th>Cantidad</th>
            <th>Num Pago</th>
            <th>Fecha de solicitud</th>
            <th>Fecha de liquidacion</th>
            <th>Historial de Pagos</th>
        </thead>
        <tbody>
            @foreach (Prestamo data in Model.Prestamos)
            {
                <tr>
                    <td>@data.IDPrestamo</td>
                    <td>@data.Cantidad</td>
                    <td>@data.Pagos.Count()</td>
                    <td>@Convert.ToString(string.Format("{0:dd/MM/yyyy}",data.FechaSolicitud))</td>
                    <td>@Convert.ToString(string.Format("{0:dd/MM/yyyy}", data.FechaLiquidacion))</td>
                    <td>
                        <a asp-action="HistorialPagos" asp-route-id="@data.IDPrestamo">Ver historial</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

