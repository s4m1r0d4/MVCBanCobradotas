<div class="row">
    <h1 class="display">Historial de cada pago</h1>
    <table class="thead-inverse" align="left">
        <tr>
            <th>Pago NÂ°</th>
            <th>Cantidad del pago</th>
            <th>Fecha del pago</th>
        </tr>

        <tbody>
            @if (Model.HistorialPagos is not null)
            {
                @foreach (Pago data in Model.HistorialPagos)
                {
                    <tr>
                        <td>@data.IDPago</td>
                        <td>@data.Cantidad</td>
                        <td>@Convert.ToString(string.Format("{0:dd/MM/yyyy}", data.Fecha))</td>
                    </tr>
                }
            }
        </tbody>
    </table>
